{
  "env": {
    "browser": true
  },
  // "parser": "vue-eslint-parser",
  // "parserOptions": {
  //     "parser": "babel-eslint"
  // },
  "plugins": [
    // "vue"
    "prettier"
  ],
  "extends": [
    "standard"
    // "plugin:vue/strongly-recommended"
  ],
  "rules": {
    // "no-console": 1,
    // "prefer-template": 2,
    // "semi": [
    //     "error",
    //     "always"
    // ],
    "prettier/prettier": [
      "error",
      {
        "no-console": 1,
        "printWidth": 140,
        "tabWidth": 2,
        "useTabs": false,
        "semi": ["error", "always"],
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    ]
  }
}
